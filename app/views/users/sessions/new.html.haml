.row
  .col-md-12
    .mgt20
      = devise_error_messages!
    .authform
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', id: "sign_in_user"}) do |f|
        %h3 Sign in
        .form-group
          = f.label :email
          = f.email_field :email, :autofocus => true, class: 'form-control', id: "sign_email"
        .form-group
          - if devise_mapping.recoverable?
            = link_to "Forgot password?", new_password_path(resource_name), class: 'right'
          = f.label :password
          = f.password_field :password, class: 'form-control', id: "sign_password"
        = f.submit 'Sign in', :class => 'button right'
        - if devise_mapping.rememberable?
          .checkbox{:style => "width:150px"}
            %label
              = f.check_box :remember_me
              Remember me
